<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "viewCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="termsStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FAF8EF</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="termsTitleStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FAF8EF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!--<item name="colorControlNormal">@color/gray_dark</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>